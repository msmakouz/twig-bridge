{
    "name": "spiral/twig-bridge",
    "type": "library",
    "description": "Spiral Framework: Twig Adapter",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Titov / Wolfy-J",
            "email": "wolfy.jd@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "twig/twig": "^2.5||^3.3",
        "spiral/views": "^3.0",
        "spiral/framework": "^3.0"
    },
    "require-dev": {
        "vimeo/psalm": "^4.6",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.1",
        "spiral/code-style": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Twig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Twig\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
